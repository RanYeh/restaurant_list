<!-- import scripts -->
<script src="../events.js"></script>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <h4 class="mb-2">尋找餐廳：</h4>
    <div class="search-bar-inner">
      <form action="/search">
        <div class="row">
          <div class="input-group col">
            <input type="text" name="keyword" value ="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>

          <div class="input-group col">
            <select class="form-select" id="sort" name="sort">
              <option value="ascent">A > Z</option>
              <option value="descent">Z > A</option>
              <option value="category">類別</option>
              <option value="location">地區</option>
            </select>
          </div>   
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div class="g-3">
            <a href="/restaurants/{{this._id}}">
              <div class="card mb-3 g-0">
                <img class="card-img-top" src="{{this.image}}"
                  alt="{{this.name}}">
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>
            
                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                  </div>
            
                  <span class="badge rounded-pill bg-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>

                <div class="card-footer d-flex justify-content-end flex-wrap">
                  <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
                  <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>
                  <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger btn-sm text-white">Delete</button>
                  </form>
                </div>
              </div>
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

